<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/recyclerView_ambil"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    app:cardCornerRadius="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/ambil_gambar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/blurredphoto"
                android:scaleType="centerCrop"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/ambil_judul"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:text="@string/ambil_item_title"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_margin="10dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/ambil_button_ambil"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="4dp"
            android:layout_alignParentEnd="true"
            android:text="@string/ambil"
            android:background="@drawable/shape_rect_corner"
            android:textAllCaps="false"
            android:textColor="@color/white"/>
    </RelativeLayout>


</android.support.v7.widget.CardView>